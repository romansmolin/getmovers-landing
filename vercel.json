{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/build" }
      },
      {
        "src": "server/app.js",  
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/client/(.*)", "dest": "/client/build/$1" },
      { "src": "/server/(.*)", "dest": "/server/$1" },
      { "src": "/(.*)", "dest": "/server/app.js" }
    ]
  }